<%= form_for [user, item] do |f| %>
  <% if flash[:notice] %>
    <% flash[:notice].each do |msg| %>
      <%= msg %><br>
    <% end %>
  <% end %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.label :client_id %>
    <%= f.collection_select :client_id, current_user.clients, :id, :name, prompt: "Please select the client this item belongs to" %>
  <br>
  <%= f.submit %>
<% end %>
