<%= link_to "Create new location", new_location_path %>
<h2>Current locations</h2>
<ol>
  <% @locations.each do |location| %>
    <li>
      <%= link_to "#{location.company_name}", location_path(location) %><br>
      <p><%= location.address1 %> <%= location.address2 %><br>
      <%= location.city %>, <%= location.state %> <%= location.zip_code %></p>
    </li>
  <% end %>
</ol>
