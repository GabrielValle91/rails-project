<%= form_for location do |f| %>
  <% if flash[:notice] %>
    <% flash[:notice].each do |msg| %>
      <%= msg %><br>
    <% end %>
  <% end %>
  <%= f.label :company_name %>
  <%= f.text_field :company_name %><br>
  <%= f.label :address1 %>
  <%= f.text_field :address1 %><br>
  <%= f.label :address2 %>
  <%= f.text_field :address2 %><br>
  <%= f.label :city %>
  <%= f.text_field :city %><br>
  <%= f.label :state %>
  <%= f.select :state, Location::STATES, {include_blank: true} %><br>
  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %><br>
  <%= f.submit %>
<% end %>
