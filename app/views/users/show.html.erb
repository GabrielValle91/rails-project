<div class="client-details">
  <h3>Top Clients</h3>
  Client Name - Total Shipments
  <ul>
    <% @user.clients.top_5.each do |client| %>
      <li>
        <%= client.name %> - <%= client.shipments.count %>
      </li>
    <% end %>
  </ul>
</div>
<div class="client-details">
  <h3>Top Drivers</h3>
  Driver Name - Total Shipments
  <ul>
    <% @user.drivers.top_5.each do |driver| %>
      <li>
        <%= driver.name %> - <%= driver.shipments.uniq.size %>
      </li>
    <% end %>
  </ul>
</div>
